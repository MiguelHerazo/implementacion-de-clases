class Vehiculo:
    def _init_(self,color,placa,marca,modelo,precio):
        self.color = color
        self.placa = placa
        self.marca = marca
        self.modelo = modelo
        self.precio = precio
        self.estado = False #esto guarda si esta vendido o no, al inicio no se encuentra vendido el auto, por tanto es false

    def imprimirDatos(self):#metodo para imprimir la informacion de un vehiculo
        print("Color:",self.color)
        print("Placa:",self.placa)
        print("Marca:",self.marca)
        print("Modelo:",self.modelo)
        print("Precio: $",self.precio)
        if(self.estado):
            print("Estado: vendido")
        else:
            print("Estado: sin vender")
    
    def asignarDatos(self,color,placa,marca,modelo,precio): #este metodo sirve por si alguien desea editar un vehiculo se reasignan los atributos
        self.color = color
        self.placa = placa
        self.marca = marca
        self.modelo = modelo
        self.precio = precio
    def venderVehiculo(self):
        self.estado = True



def imprimirConcesionario(concesionario):#metodo que recorre una lista de vehiculos e imprime la informacion de cada uno
    print("")
    for i in range(len(concesionario)):
        print("Vehiculo #",i+1)
        concesionario[i].imprimirDatos()
        print("--------------------") 



def menu():
    concesionario = []#el concesionario es una lista de vehiculos
    opc = 1
    while(opc != 0):
        print("0. Salir")
        print("1. Registrar vehiculo")
        print("2. Listar vehiculos")
        print("3. Vender vehiculo")
        print("4. Editar informacion de un vehiculo")


        opc = int(input("Ingrese opcion: "))
        if(opc == 1):
            color = input("Ingrese color: ")
            placa = input("Ingrese placa: ")
            marca = input("Ingrese marca: ")
            modelo = input("Ingrese modelo: ")
            precio = input("Ingrese precio: ")
            concesionario.append(Vehiculo(color,placa,marca,modelo,precio))
        elif(opc == 2):
            imprimirConcesionario(concesionario)
        elif(opc == 3):
            imprimirConcesionario(concesionario)
            numero = int(input("Ingrese # del vehiculo que desea vender: "))
            if(numero >= 1 and numero <= len(concesionario)):
                concesionario[numero-1].venderVehiculo()
            else:
                print("Ingrese # de vehiculo valido!")
        elif(opc == 4):
            imprimirConcesionario(concesionario)
            numero = int(input("Ingrese # del vehiculo que desea editar: "))
            color = input("Ingrese color: ")
            placa = input("Ingrese placa: ")
            marca = input("Ingrese marca: ")
            modelo = input("Ingrese modelo: ")
            precio = input("Ingrese precio: ")
            if(numero >= 1 and numero <= len(concesionario)):
                concesionario[numero-1].asignarDatos(color,placa,marca,modelo,precio)
            else:
                print("Ingrese # de vehiculo valido!")
